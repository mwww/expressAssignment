<!DOCTYPE html>
<html>
  <head>
    <title>Add a To-Do</title>
    <link rel="stylesheet" href="/css/base.css" />
    <style>
      main,
      form {
        display: flex;
        flex-direction: column;
        gap: 10px;
      }
    </style>
  </head>
  <body>
    <main>
      <h1>Add a To-Do</h1>
      <% if (typeof error !== 'undefined') { %>
      <p><%= error %></p>
      <% } %>
      <form method="POST" action="/todo/add">
        <label for="title">Title</label>
        <input
          type="text"
          id="title"
          name="title"
          required
          placeholder="Makan Ayam"
        />
        <br />
        <label for="description">Description</label>
        <input
          type="text"
          id="description"
          name="description"
          required
          placeholder="Ayam Enak"
        />
        <br />
        <button type="submit">Add</button>
      </form>
    </main>
  </body>
</html>
